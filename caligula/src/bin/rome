    cli = null,
    http = null;

http = {
    "condotti": {
        "condotti.server.logging": {
            "level": "DEBUG"
        }
    },
    "modules": [
        "caligula.actions.http",
        "caligula.apps.connect",
        "caligula.contextualizers.http",
